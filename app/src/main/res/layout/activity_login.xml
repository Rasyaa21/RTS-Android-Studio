<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@id/guideline3"
        app:layout_constraintBottom_toBottomOf="@id/guideline4"
        app:layout_constraintStart_toStartOf="@id/yGuide1"
        app:layout_constraintEnd_toEndOf="@id/yGuide2"
        android:src="@drawable/signcard"
        android:layout_height="0dp"/>

    <LinearLayout

        android:layout_width="0dp"
        android:background="@drawable/selection_design"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@id/buttonGroupGuide1"
        app:layout_constraintEnd_toEndOf="@id/innerYGuide2"
        app:layout_constraintBottom_toBottomOf="@id/buttonGroupGuide2"
        app:layout_constraintStart_toStartOf="@id/innerYGuide1"
        android:layout_height="0dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15dp"
            android:background="@drawable/red_one_button"
            android:textColor="@color/white"
            android:fontFamily="@font/itim"
            android:textAllCaps="false"
            android:text="Log In"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15dp"
            android:background="@color/white"
            android:textColor="#990100"
            android:fontFamily="@font/itim"
            android:textAllCaps="false"
            android:text="Sign Up"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="end"
        android:layout_width="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/editTextGuide2"
        app:layout_constraintBottom_toBottomOf="@id/editTextGuide1"
        app:layout_constraintStart_toStartOf="@id/innerYGuide1"
        app:layout_constraintEnd_toEndOf="@id/innerYGuide2"
        android:layout_height="0dp">

        <EditText
            android:layout_marginVertical="8dp"
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeMinTextSize="12sp"
            android:textColorHint="@color/white"
            android:autoSizeTextType="uniform"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/itim"
            android:hint="Enter Your Email"
            android:inputType="textEmailAddress"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeMinTextSize="12sp"
            android:textColorHint="@color/white"
            android:autoSizeTextType="uniform"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/itim"
            android:hint="Enter Your Password"
            android:inputType="textPassword"
            android:textSize="16dp" />

        <TextView
            android:layout_marginRight="2dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:fontFamily="@font/itim"
            android:text="Forgot Password?"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:layout_width="0dp"
        android:text="Log in"
        android:fontFamily="@font/itim"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/button_login_signup"
        app:layout_constraintTop_toTopOf="@id/buttonGuide1"
        app:layout_constraintBottom_toBottomOf="@id/buttonGuide2"
        app:layout_constraintStart_toStartOf="@id/innerYGuide1"
        app:layout_constraintEnd_toEndOf="@id/innerYGuide2"
        android:layout_height="0dp"/>

    <TextView
        android:layout_width="0dp"
        android:text="OR"
        android:gravity="center"
        android:fontFamily="@font/itim"
        android:autoSizeMaxTextSize="15sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/orGuide1"
        app:layout_constraintBottom_toBottomOf="@id/orGuide2"
        app:layout_constraintStart_toStartOf="@id/innerYGuide1"
        app:layout_constraintEnd_toEndOf="@id/innerYGuide2"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/loginOptionGuide1"
        app:layout_constraintBottom_toBottomOf="@id/loginOptionGuide2"
        app:layout_constraintStart_toStartOf="@id/innerYGuide1"
        app:layout_constraintEnd_toEndOf="@id/innerYGuide2"
        android:layout_height="0dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/whatsapp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/Instagram_icon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/tiktok" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/loginOptionGuide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/loginOptionGuide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.765" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonGuide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.56" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonGuide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.62" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/orGuide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.64" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/orGuide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.675" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/editTextGuide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/editTextGuide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.36" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonGroupGuide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.31" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonGroupGuide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.27" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/yGuide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/yGuide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.88" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/innerYGuide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/innerYGuide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80" />
</androidx.constraintlayout.widget.ConstraintLayout>